<!-- <?xml version="1.0" encoding="utf-8"?> -->
<odoo>
    <data>
        <record model="ir.ui.view" id="swapi_quizz_wizard_form_view">
            <field name="name">swapi.quizz.wizard.form</field>
            <field name="model">swapi.quizz.wizard</field>
            <field name="arch" type="xml">
                <form >
                    <sheet>
                        <div class="container">
                                <div class="row">
                                    <div class="col">
                                        <h5>
                                            Theme :
                                            <field name="theme_id"/>
                                        </h5>
                                    </div>
                                    <div class="col-6">
                                    </div>
                                    <div class="col">
                                        <h5>
                                            Level :
                                            <field name="level_id"/>
                                        </h5>

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <h5>
                                            Player :
                                            <field name="player_id"/>
                                        </h5>
                                    </div>
                                    <div class="col-6">
                                    </div>
                                    <div class="col-3">
                                        <h5>
                                            Score :
                                            <field name="score"/>
                                        </h5>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-9">
                                    </div>
                                    <div class="col-3">
                                        <h5>
                                            Number of questions :
                                            <field name="question_nr"/>
                                        </h5>

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <p>
                                            In which film(s) can we see at least one representative of this specie?
                                        </p>
                                        <h5>
                                            <field name="question"/>
                                        </h5>

                                    </div>
                                </div>
                            </div>
                        
                    </sheet>
                </form>
            </field>
        </record>
        
       
   </data>
</odoo>